@model Forum20.Models.Post.UserPostListModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            
           
           My Posts
        </div>
        <div class="sectionDescription">
            <div class="forumLogo" style="background-image: url(@Model.ImageUrl); background-size:100%"></div>
            <span id="results">@Model.UserName</span>
        </div>
    </div>
    <div class="row" id="forumIndexContent">
        @if (Model.Posts.Any())
        {
            <table class="table table-responsive" id="postList">
                <thead class="thead-dark text-uppercase text-white">
                    <tr>
                        <th>Forums</th>
                        <th>Title</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var post in Model.Posts)
                    {
                        <tr>
                            <td>
                                <div class="forumLogo" style="background-image: url(@post.Forum.ImageUrl); background-size:100%"></div>
                                <div class="forumData">
                                    <div class="forumTitle">
                                        <a asp-controller="Forum" asp-action="Topic" asp-route-id="@post.Forum.Id">@post.Forum.Name</a>
                                    </div>

                                </div>
                            </td>
                            <td>
                                <div class="forumDescription">
                                    <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">  @post.Title</a>
                                  
                                </div>
                            </td>
                            <td>
                                <div class="forumPostCount">
                                    @post.RepliesCount Replies
                                </div>
                                @* <div class="forumMemberCount">
                                        @forum.NumberOfUsers Users
                                </div>*@
                            </td>
                            <td>
                                <a asp-controller="Post"
                                   asp-action="Edit"
                                   asp-route-id="@post.Id" onclick="return confirm('Are you sure you want Edit this Post')" class="btn btn-editPost">Edit</a>|
                                <a asp-controller="Post"
                                   asp-action="Delete"
                                   asp-route-id="@post.Id" onclick="return confirm('Are you sure you want Delete this Post')" class="btn btn-deletePost">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table> 
        }
        else
        {
            <div class="noPosts">
                <h3>You have not been created any post so far.<br /></h3>
                <p style="color:limegreen">Why don't you <a asp-controller="Forum" asp-action="Index">create</a> some posts</p>
            </div>
        }
    </div>
       
</div>


